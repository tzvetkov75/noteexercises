<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:horizontalSpacing="4dp"
            android:rowCount="5"
            android:verticalSpacing="4dp" >

            <EditText
                android:id="@+id/editExerciese"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="0"
                android:layout_weight="1"
                android:ems="10" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editTextRepetitions"
                android:layout_width="137dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="1"
                android:editable="false"
                android:ems="10"
                android:hint="buttons >>>>" />

            <Button
                android:id="@+id/button10"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="right|top"
                android:layout_row="0"
                android:onClick="HandleClickAddButton"
                android:tag="10"
                android:text="@string/button10" />

            <Button
                android:id="@+id/button5"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="right|top"
                android:layout_row="1"
                android:onClick="HandleClickAddButton"
                android:tag="5"
                android:text="@string/button5" />

            <Button
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="right|top"
                android:layout_row="2"
                android:onClick="HandleClickAddButton"
                android:tag="2"
                android:text="@string/button2" />

            <Button
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="right|top"
                android:layout_row="3"
                android:onClick="HandleClickAddButton"
                android:tag="1"
                android:text="@string/button1" />

            <Button
                android:id="@+id/button0"
                 android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="right|top"
                android:layout_row="4"
                android:onClick="HandleClickAddButton"
                android:tag="0"
                android:text="@string/button0" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:text="@string/textViewWeight" />

            <TextView
                android:id="@+id/viewTextRepetition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="1"
                android:text="@string/textViewRepetitions" />

            <TextView
                android:id="@+id/exerciese"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="@string/textViewExercise" />

            <EditText
                android:id="@+id/exitTextWeight"
                android:layout_width="134dp"
                android:layout_height="52dp"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="2"
                android:editable="false"
                android:ems="10"
                android:hint="buttons >>>" />

            <LinearLayout
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:orientation="vertical" >
            </LinearLayout>

            <Button
                android:id="@+id/buttonStore"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="3"
                android:layout_weight="2"
                android:onClick="HandleClickStore"
                android:text="@string/buttonStore" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="@string/textViewHistory" />

            <ListView
                android:id="@+id/listViewHistory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >
            </ListView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>